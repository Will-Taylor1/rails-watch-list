<h1 class="text-center"><%= @list.name %></h1>
<hr>
<div class="container" class="d-flex flex-row bd-highlight mb-3" style="width: 1200px;" >
  <ul>
  <div class=" d-flex align-items-cents justify-content-between m-10" style="width: 500px;">
    <% @list.bookmarks.each do |bookmark|%>
    <li>
      <div class="card" class="p-2 bd-highlight">
        <img src="<%= bookmark.movie.poster_url %>" alt="" style="width: 150px;">
        <div class="card-body">
        <div class="card-title"><%= bookmark.movie.title %></div>
        <div class="card-overview"><%= bookmark.movie.overview  %></div>
        <div class="card-rating"><%= bookmark.movie.rating  %></div>
          <%= link_to "Delete",
            bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %>
        </div>
      </div>
    </li>
    <% end %>
  </div>
  </ul>
</div>
<hr>
<div class="text-center">
  <%= link_to "Add a new bookmark to a list", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Go back to all lists", lists_path, class: "btn btn-primary" %>
</div>
